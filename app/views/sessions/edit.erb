    <label><input type="radio" name="mood_rating" value="3" <%='checked' if @edit_session.mood_rating == 3 %>> <img src="/images/average.jpg" alt="average" class="center_img"></label>
    <label><input type="radio" name="mood_rating" value="4" <%='checked' if @edit_session.mood_rating == 4 %>> <img src="/images/good.jpg" alt="good" class="center_img"></label>
    <label><input type="radio" name="mood_rating" value="5" <%='checked' if @edit_session.mood_rating == 5%>> <img src="/images/amazing.jpg" alt="amazing" class="center_img"></label>
<br>
        <input type="submit" name="Edit Session" id="submit">
    <br>

  </form>